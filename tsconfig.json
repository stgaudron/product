{
  "display": "Node 16",
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
     "sourceMap": false,
     "inlineSourceMap": false,
     "outDir": "/dist",
     "strict": true,
     "lib": ["esnext"],
     "esModuleInterop": true,
     "target": "ES2021",
     "moduleResolution": "node",
     "composite": true,
     "declaration": true,
     "skipLibCheck": true,
     "allowUmdGlobalAccess": true
    },
  "exclude": [
    "node_modules",
    "dist"
    ],
 
}